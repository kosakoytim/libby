<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.goodhabitstudio.libbyapp.libbyapp.AddReadingPlanThirdPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/paddingMargin16"
            android:paddingRight="@dimen/paddingMargin16"
            android:layout_marginBottom="@dimen/paddingMargin16"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back"
                    android:layout_marginRight="@dimen/paddingMargin16"
                    android:onClick="returnToHome"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/add_readingPlan"
                    android:textColor="@color/colorTextBlack"
                    />
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/paddingMargin16"
            android:paddingRight="@dimen/paddingMargin16"
            android:layout_marginBottom="@dimen/paddingMargin16"
            >
            <!--Step 1-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="1"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/circle_red_background"
                    android:clickable="false"
                    android:layout_marginBottom="@dimen/paddingMargin8"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Book"
                    android:textSize="@dimen/textSmall"
                    android:layout_gravity="start"
                    />
            </LinearLayout>

            <!--Step 2-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="2"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/circle_red_background"
                    android:clickable="false"
                    android:layout_marginBottom="@dimen/paddingMargin8"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reading Days"
                    android:textSize="@dimen/textSmall"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <!--Step 3-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <Button
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:text="3"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/circle_red_background"
                    android:clickable="false"
                    android:layout_marginBottom="@dimen/paddingMargin8"
                    android:layout_gravity="end"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Dates"
                    android:textSize="@dimen/textSmall"
                    android:layout_gravity="end"
                    />
            </LinearLayout>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/paddingMargin16"
            android:layout_marginRight="@dimen/paddingMargin16"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="@dimen/paddingMargin16"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/alarm_clock"
                    android:layout_marginTop="@dimen/paddingMargin16"
                    android:layout_marginBottom="@dimen/paddingMargin16"
                    />

                <!--Book Title-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Book to read"
                    android:textColor="@color/colorTextDarkGrey"
                    android:paddingRight="@dimen/paddingMargin16"
                    android:paddingLeft="@dimen/paddingMargin16"
                    android:textSize="@dimen/textSmall"
                    android:layout_marginBottom="@dimen/paddingMargin8"
                    />
                <TextView
                    android:id="@+id/readingPlan3_bookTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/paddingMargin16"
                    android:maxLines="2"
                    android:text="@string/placeholder_bookTitle"
                    android:paddingLeft="@dimen/paddingMargin16"
                    android:paddingRight="@dimen/paddingMargin16"
                    android:textSize="@dimen/textMedium"
                    android:textColor="@color/colorPrimary2"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/paddingMargin16"
                    android:paddingLeft="@dimen/paddingMargin16"
                    android:layout_marginBottom="@dimen/paddingMargin16"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Number of pages"
                            android:textColor="@color/colorTextDarkGrey"
                            android:textSize="@dimen/textSmall"
                            android:layout_marginBottom="@dimen/paddingMargin8"
                            />
                        <TextView
                            android:id="@+id/readingPlan3_bookPages"
                            style="@style/RegularCardText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/paddingMargin16"
                            android:textSize="@dimen/textMedium"
                            android:maxLines="2"
                            android:text="244"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reading Days"
                            android:textColor="@color/colorTextDarkGrey"
                            android:textSize="@dimen/textSmall"
                            android:layout_marginBottom="@dimen/paddingMargin8"
                            android:gravity="end"
                            />
                        <TextView
                            android:id="@+id/readingPlan3_readingDays"
                            style="@style/RegularCardText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/paddingMargin16"
                            android:maxLines="2"
                            android:text="Mon, Wed, Fri, Sun"
                            android:gravity="end"
                            android:textSize="@dimen/textMedium"
                            />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="How many times a day would you like to read?"
                    android:textColor="@color/colorTextDarkGrey"
                    android:textSize="@dimen/textSmall"
                    android:layout_marginBottom="@dimen/paddingMargin8"
                    android:paddingLeft="@dimen/paddingMargin16"
                    android:paddingRight="@dimen/paddingMargin16"
                    />
                <Spinner
                    android:id="@+id/readingPlan3_readingTimeSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/paddingMargin16"
                    android:layout_marginStart="@dimen/paddingMargin16"
                    android:layout_marginBottom="@dimen/paddingMargin16"
                    android:entries="@array/readingTime"
                    >

                </Spinner>
                <ListView
                    android:id="@+id/readingTimeList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/paddingMargin16"
                    >

                </ListView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When are you going to start reading?"
                    android:textColor="@color/colorTextDarkGrey"
                    android:textSize="@dimen/textSmall"
                    android:layout_marginBottom="@dimen/paddingMargin8"
                    android:paddingLeft="@dimen/paddingMargin16"
                    android:paddingRight="@dimen/paddingMargin16"
                    />
                <EditText
                    android:id="@+id/readingPlan3_startTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/paddingMargin16"
                    android:layout_marginRight="@dimen/paddingMargin16"
                    android:layout_marginBottom="@dimen/paddingMargin16"
                    android:hint="Starting Date"
                    android:cursorVisible="false"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Previous"
                        android:layout_marginRight="@dimen/paddingMargin16"
                        android:layout_marginLeft="@dimen/paddingMargin16"
                        style="?android:attr/borderlessButtonStyle"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimary2"
                        android:onClick="previousPage"
                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        style="@style/BasicButton.BlueBackground"
                        android:text="Finish"
                        android:layout_marginRight="@dimen/paddingMargin16"
                        android:layout_marginLeft="@dimen/paddingMargin16"
                        android:onClick="finishPlan"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
