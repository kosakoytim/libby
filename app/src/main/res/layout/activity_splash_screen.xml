<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary1"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    tools:context="com.goodhabitstudio.libbyapp.libbyapp.SplashScreen"
    >
    <ImageView
        android:id="@+id/splashScreen_logo"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:src="@drawable/libby_white"
        android:layout_marginBottom="16dp"
        />

    <TextView
        android:id="@+id/splashScreen_moto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/splash_screen_moto"
        android:layout_below="@id/splashScreen_logo"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/textLarge"
        />
</RelativeLayout>
