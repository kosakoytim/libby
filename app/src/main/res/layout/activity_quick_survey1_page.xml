<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/paddingMargin32"
    tools:context="com.goodhabitstudio.libbyapp.libbyapp.LoginPage">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextBlack"
        android:textSize="@dimen/textExtraLarge"
        android:textAlignment="center"
        android:text="Quick Survey"
        android:layout_marginBottom="@dimen/paddingMargin16"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingBottom="10dp"
        android:text="The number of books i have finished reading in my entire life is..."
        android:textColor="@color/colorTextBlack"
        />

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="1-5 books"/>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="5-10 books"/>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="10-15 books"/>

    <RadioButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="So many that i have lost counts"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="25dp"
        android:paddingBottom="10dp"
        android:text="This year, i am planning to read finish reading ... book(s)"
        android:textColor="@color/colorTextBlack"
        />


    <EditText
        android:id="@+id/number_of_books"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number of book(s)"
        android:inputType="number"
        android:layout_marginBottom="@dimen/paddingMargin32"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"></View>

        <Button
            android:id="@+id/next_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/paddingMargin8"
            android:layout_marginEnd="@dimen/paddingMargin8"
            android:text="Next"
            style="@style/BasicButton.BlueOutlined"
            android:onClick="next"
            />

    </LinearLayout>




</LinearLayout>
