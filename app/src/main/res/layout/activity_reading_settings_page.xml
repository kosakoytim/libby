<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.goodhabitstudio.libbyapp.libbyapp.ReadingSettingsPage">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/paddingMargin16"
        android:paddingRight="@dimen/paddingMargin16"
        android:layout_marginBottom="@dimen/paddingMargin16"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_back"
                android:layout_marginRight="@dimen/paddingMargin16"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reading Settings"
                android:textColor="@color/colorTextBlack"
                />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/paddingMargin16"
        android:layout_marginRight="@dimen/paddingMargin16"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/paddingMargin16"
            android:paddingBottom="@dimen/paddingMargin16"
            >
            <!--Book Title-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book to read"
                android:textColor="@color/colorTextDarkGrey"
                android:paddingRight="@dimen/paddingMargin16"
                android:paddingLeft="@dimen/paddingMargin16"
                android:textSize="@dimen/textSmall"
                android:layout_marginBottom="@dimen/paddingMargin8"
                />
            <TextView
                android:id="@+id/readingPlan3_bookTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/paddingMargin16"
                android:maxLines="2"
                android:text="@string/placeholder_bookTitle"
                android:paddingLeft="@dimen/paddingMargin16"
                android:paddingRight="@dimen/paddingMargin16"
                android:textSize="@dimen/textMedium"
                android:textColor="@color/colorPrimary2"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/paddingMargin16"
                android:paddingLeft="@dimen/paddingMargin16"
                android:layout_marginBottom="@dimen/paddingMargin16"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Number of pages"
                        android:textColor="@color/colorTextDarkGrey"
                        android:textSize="@dimen/textSmall"
                        android:layout_marginBottom="@dimen/paddingMargin8"
                        />
                    <TextView
                        android:id="@+id/readingPlan3_bookPages"
                        style="@style/RegularCardText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/paddingMargin16"
                        android:textSize="@dimen/textMedium"
                        android:maxLines="2"
                        android:text="244"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reading Days"
                        android:textColor="@color/colorTextDarkGrey"
                        android:textSize="@dimen/textSmall"
                        android:layout_marginBottom="@dimen/paddingMargin8"
                        android:gravity="end"
                        />
                    <TextView
                        android:id="@+id/readingPlan3_readingDays"
                        style="@style/RegularCardText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/paddingMargin16"
                        android:maxLines="2"
                        android:text="Mon, Wed, Fri, Sun"
                        android:gravity="end"
                        android:textSize="@dimen/textMedium"
                        />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How many times a day would you like to read?"
                android:textColor="@color/colorTextDarkGrey"
                android:textSize="@dimen/textSmall"
                android:layout_marginBottom="@dimen/paddingMargin8"
                android:paddingLeft="@dimen/paddingMargin16"
                android:paddingRight="@dimen/paddingMargin16"
                />
            <Spinner
                android:id="@+id/readingPlan3_readingTimeSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/paddingMargin16"
                android:layout_marginStart="@dimen/paddingMargin16"
                android:layout_marginBottom="@dimen/paddingMargin16"
                android:entries="@array/readingTime"
                >

            </Spinner>
            <!--Number of Days-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On what day(s) are you planning to read this book?"
                android:textColor="@color/colorTextDarkGrey"
                android:paddingRight="@dimen/paddingMargin16"
                android:paddingLeft="@dimen/paddingMargin16"
                android:textSize="@dimen/textSmall"
                android:layout_marginBottom="@dimen/paddingMargin8"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/paddingMargin16"
                android:paddingRight="@dimen/paddingMargin16"
                android:layout_marginBottom="@dimen/paddingMargin16"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <CheckBox
                        android:id="@+id/monday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Monday"/>
                    <CheckBox
                        android:id="@+id/tuesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tuesday"/>
                    <CheckBox
                        android:id="@+id/wednesday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wednesday"/>
                    <CheckBox
                        android:id="@+id/thursday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thursday"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <CheckBox
                        android:id="@+id/friday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Friday"/>
                    <CheckBox
                        android:id="@+id/saturday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Saturday"/>
                    <CheckBox
                        android:id="@+id/sunday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sunday"/>
                </LinearLayout>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/paddingMargin16"
                android:layout_marginLeft="@dimen/paddingMargin16"
                style="@style/BasicButton.RedBackground"
                android:text="Save Settings"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
